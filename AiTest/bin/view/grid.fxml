<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GridController">
    <GridPane fx:id="main" prefHeight="313.0" prefWidth="600.0" vgap="5" hgap="5">
    <GridPane fx:id="grid" prefHeight="313.0" prefWidth="600.0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.halignment="LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2" >
        <buttons>
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#doForwardSearch" text="Forward Search" />
            <Button fx:id="backwardsSearchButton" mnemonicParsing="false" onAction="#doBackwardSearch" text="Backward Search" />
            <Button fx:id="adaptiveSearchButton" mnemonicParsing="false" onAction="#doAdaptiveSearch" text="Adaptive Search" />
            <Button fx:id="reloadButton" mnemonicParsing="false" onAction="#doRestart" text="Restart" />

        </buttons>
    </ButtonBar>
    </GridPane>
</AnchorPane>